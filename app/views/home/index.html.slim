- if current_user
  h4 My Team
  table
    tr
      th Player
      th Today
      th Through
      th Total
    tr
      td Total
      td = @my_today
      td
      td = @my_total
    -@my_scores.each do |score|
      tr.js-player-row
        td = score.name
        td = score_or_time(score)
        td = score.thru
        td = score.total
      tr.hide
        td = score.first_round
        td = score.second_round
        td = score.third_round
        td = score.fourth_round

